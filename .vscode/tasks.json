{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "isBuildCommand": true,
      "label": "Compile Debug",
      "type": "process",
      "command": "",
      "windows": {
        "command": "bin/windows/lua52.exe",
      },
      "linux": {
        "command": "bin/linux/?", // TODO set right name for linux lua binaries
      },
      "osx": {
        "command": "bin/osx/?", // TODO set right name for osx lua binaries
      },
      "args": [
        "--", "entry_point.lua",
        "src", "src/main.lua",
        // can't use ${workspaseFolder} because that results in
        // backslashes on windows, and those are not supported as of now
        "--source", "src",
        "--output", "../out/debug",
        // for now source files are still `.lua` files because they
        // do compile with regular lua compilers and i do not trust
        // phobos enough yet
        // this will probably change soon though
        "--pho-extension", ".lua",
      ],
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
  ],
}