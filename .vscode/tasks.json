{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "Build Debug",
      "group": "build",
      // if launching it like this doesn't work on all platforms, let me know
      "command": "launch_scripts/phobos_dev",
      "linux": {
        "args": [
          "linux", "src", "scripts/build_src.lua",
          "--profile", "debug",
        ],
      },
      "osx": {
        "args": [
          "osx", "src", "scripts/build_src.lua",
          "--profile", "debug",
        ],
      },
      "windows": {
        "args": [
          "windows", "src", "scripts/build_src.lua",
          "--profile", "debug",
        ],
      },
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
    {
      "type": "process",
      "label": "Build Factorio Mod Debug",
      "group": "build",
      // if launching it like this doesn't work on all platforms, let me know
      "command": "launch_scripts/phobos_dev",
      "linux": {
        "args": [
          "linux", "src", "scripts/build_src.lua",
          "--profile", "release",
        ],
      },
      "osx": {
        "args": [
          "osx", "src", "scripts/build_src.lua",
          "--profile", "release",
        ],
      },
      "windows": {
        "args": [
          "windows", "src", "scripts/build_src.lua",
          "--profile", "release",
        ],
      },
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
    {
      "type": "process",
      "label": "Generate vscode launch json",
      "args": [
        "--", "scripts/generate_vscode_launch_json.lua",
      ],
      "command": "", // vscode complains otherwise
      "linux": {
        "command": "bin/linux/lua",
      },
      "osx": {
        "command": "bin/osx/lua",
      },
      "windows": {
        "command": "bin/windows/lua",
      },
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
  ],
}